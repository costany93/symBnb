{% extends 'base.html.twig' %}

{% block title %}Connexion au site!{% endblock %}

{% block body %}


<div class="example-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 mt-4">
                <div class="py-3 px 3 bg-light">
                    <h1>Connectez-vous</h1>
                    {% if hasError %}
                        <div class="alert alert-danger">
                            une erreur s'est produite, nom d'utilisateur ou mot de passe incorrect
                        </div>
                    {% endif %}
                    <form action="{{path('account_login')}}" method="post" class="form">
                        <div class="form-group">
                            <label for="email" class="label">Email</label>
                            <input type="text" name="_username" id="email" placeholder="Entrer votre adresse email" required="" class="form-control" value={{lastname}}>
                        </div>  
                        <div class="form-group">
                            <label for="password" class="label">Mot de passe</label>
                            <input type="password" name="_password" id="password" placeholder="Entrer votre mot de passe" required="" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Se connecter</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
{% endblock %}
