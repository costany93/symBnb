{% block stylesheets %}
    <style>
        span.rating i{
            color: goldenrod;
        }
    </style>
{% endblock %}


<span class="rating">
    {% for i in 1..5 %}
        {% if i <= rating  %}
            <i class="fas fa-star"></i>
        {% else %}
            <i class="far fa-star"></i>
        {% endif %}
    {% endfor %}
</span>