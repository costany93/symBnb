{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminAdController!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h5 class="my-3">Gestions des annonces</h5>

        <table class="table table-hover">
            <thead>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">RÃ©servations</th>
                <th class="text-center">Note</th>
                <th>Action</th>
            </thead>

            {% for ad in pagination.data %}
                <tbody>
                    <tr>
                        <td>{{ad.id}}</td>
                        <td>{{ad.title}}</td>
                        <td>{{ad.author.fullname}}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ad.bookings | length}}</span>
                        </td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{ad.avgRating | number_format(1, ',', ' ')}}</span>
                        </td>
                        <td>
                            <a href="{{path('admin_ads_edit',{id: ad.id})}}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                            <a href="{{path('admin_ads_delete',{id: ad.id})}}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                </tbody>
            {% endfor %}
        </table>
        <div class="d-flex justify-content-center">
            {% set page = pagination.page %}
            {% set pages = pagination.pages %}
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item {% if page == 1 %}disabled{% endif %}">
                    
                    <a class="page-link" href="{{path('admin_ads_index',{'page': page-1})}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                    </li>
                    {% for i in 1..pages %}
                        
                        <li class="page-item {% if page == i %}active{% endif %}"><a class="page-link" href="{{path('admin_ads_index',{'page': i})}}">{{i}}</a></li>
                    {% endfor %}
                    <li class="page-item {% if page == pages %}disabled{% endif %}">
                        <a class="page-link" href="{{path('admin_ads_index',{'page': page + 1})}}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}
