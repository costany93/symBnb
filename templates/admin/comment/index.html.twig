{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminCommentController!{% endblock %}

{% block body %}
    <h2 class="text-center">Liste des commentaires</h2>

    <table class="table table-bordered">
        <thead>
            <th>Id</th>
            <th>Date</th>
            <th>Auteur</th>
            <th>Commentaire</th>
            <th>Note</th>
            <th>Annonce</th>
            <th></th>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{comment.id}}</td>
                    <td>{{comment.createdAt | date('d/m/Y')}}</td>
                    <td>{{comment.author.fullname}}</td>
                    <td>{{comment.content}}</td>
                    <td><span class="badge badge-dark">{{comment.rating}}</span></td>
                    <td>{{comment.ad.title}}</td>
                    <td>
                        <a href="{{path('admin_comments_edit',{id: comment.id})}}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        <a href="{{path("admin_comments_delete", {id: comment.id})}}"  class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
