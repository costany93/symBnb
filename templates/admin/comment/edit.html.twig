{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="container ">
        <h3 class="text-center">Modification du commentaire N {{comment.id}}</h3>
        <div class="alert alert-success">
            <p>Annonce lié : {{comment.ad.title}}</p>
            <p>Auteur du commentaire : {{comment.author.fullname}}</p>
            <p>Date de création : {{comment.createdAt | date("d/m/Y")}}</p>
            <p>Note donnée : {{comment.rating}}</p>
        </div>
        {{form_start(form)}}
            {{form_row(form.content)}}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check"></i> Enregistrer les modifications
            </button>
        {{form_end(form)}}
    </div>
    
{% endblock %}