{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminBookingController!{% endblock %}

{% block body %}
    <h3>Bienvenue sur les r√©servations</h3>

    <table class="table table-bordered">
        <thead>
            <th>Id</th>
            <th>Date</th>
            <th>Visiteur</th>
            <th>Annonce</th>
            <th>Montant</th>
            <th>Action</th>
        </thead>
        <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{booking.id}}</td>
                    <td>{{booking.createdAt | date('d/m/Y')}}</td>
                    <td>{{booking.booker.fullname}}</td>
                    <td>{{booking.ad.title}}</td>
                    <td>{{booking.amount}}</td>
                    <td>
                        <a href="{{path('admin_booking_edit',{id: booking.id})}}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{path('admin_booking_delete',{id: booking.id})}}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
